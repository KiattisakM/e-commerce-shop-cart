{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "hooks": {
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "say -v \"Samantha\" \"Task complete\""
          }
        ]
      }
    ],
    "SubagentStop": [],
    "Notification": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "say -v \"Samantha\" \"Need your next work\""
          }
        ]
      }
    ]
  }
}